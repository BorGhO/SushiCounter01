<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/piatto_shape_layout"


    android:orientation="vertical"
    android:paddingTop="10dp">


    <ImageView
        android:id="@+id/piattoImage01"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:paddingTop="10dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:weightSum="6"
        android:orientation="horizontal"
        android:paddingTop="10dp">

    <TextView
        android:id="@+id/piattoTitleText01"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="titolo"
        android:layout_weight="5"
        android:textAlignment="center"
        android:textColor="@color/tonno"
        android:textSize="20sp"
        android:textStyle="bold" />


        <ImageView
            android:id="@+id/openDesc01"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/down_chevron"
            android:paddingTop="10dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/piattoDescText01"
        android:layout_width="0dp"
       android:visibility="gone"
        android:layout_height="wrap_content"
        android:text="descrizione"
        android:textAlignment="center"
        android:textSize="20sp"
        android:paddingBottom="10dp"
        />

</LinearLayout>